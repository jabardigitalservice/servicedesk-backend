{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "rules": {
        "comma-dangle": 0,
        "no-underscore-dangle": 0,
        "no-param-reassign": 0,
        "no-return-assign": 0,
        "camelcase": "off",
        "semi": "off",
        "eol-last": 2,
        "max-lines-per-function": [
            "error", { "max": 25 }
        ]
    },
    "globals": {
        "use": "readonly"
    },
    "overrides": [
        {
          "files": ["./test/functional/*.spec.js", "./vowfile.js"],
          "rules": {
            "max-lines-per-function": ["off"]
          }
        }
    ] 
}
